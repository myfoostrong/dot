{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-4.6",
  "permission": {
    "doom_loop": "ask"
  },
  "theme": "tokyonight",
  "agent": {
    "general": {
        "model": "zai-coding-plan/glm-4.6"
    },
    "task-orchestrator": {
        "description": "Use this agent to manage tasks and planning for subagents",
        "mode": "primary",
        "model": "anthropic/claude-haiku-4-5",
        "tools": {
            "write": false,
            "edit": false,
            "bash": false,
            "todoread": true,
            "todowrite": true
        },
        "prompt": "{file:./prompts/task-orchestrator.md}"
    },
    "debugger": {
        "description": "Use this agent when analyzing the output of test runs and debugging the root cause of the failures.",
        "mode": "subagent",
        "model": "opencode/big-pickle",
        "prompt": "{file:./prompts/test_debug/test-failure-analyzer.md}",
        "tools": {
            "write": false,
            "edit": false,
            "bash": true,
            "todoread": true,
            "todowrite": true,
            "webfetch": true,
            "glob": true,
            "grep": true,
            "list": true
        }
    },
    "fastapi-developer": {
        "description": "Use this agent when a user requires development, optimization, or advice on FastAPI code.",
        "mode": "subagent",
        "model": "opencode/big-pickle",
        "prompt": "{file:./prompts/fastapi-developer.md}",
        "tools": {
            "write": true,
            "edit": true,
            "bash": true
        }
    },
    "fastapi-expert": {
        "description": "Use this agent when a user requires planning, code review or advice on FastAPI code.",
        "mode": "all",
        "model": "anthropic/claude-sonnet-4-5",
        "prompt": "{file:./prompts/fastapi-expert.md}",
        "tools": {
            "read": true,
            "glob": true,
            "grep": true,
            "webfetch": true,
            "list": true,
            "todoread": true,
            "bash": true,
            "write": false,
            "edit": false,
            "patch": false
        }
    },
    "fastmcp-expert": {
        "description": "Use this agent when a user requires planning, code review or advice on MCP protocol and FastMCP code.",
        "mode": "all",
        "model": "anthropic/claude-sonnet-4-5",
        "prompt": "{file:./prompts/fastmcp-expert.md}",
        "tools": {
            "read": true,
            "glob": true,
            "grep": true,
            "webfetch": true,
            "list": true,
            "todoread": true,
            "bash": false,
            "write": false,
            "edit": false,
            "patch": false
        }
    },
    "fastmcp-developer": {
        "description": "Use this agent when a user requires development, optimization, or advice on MCP protocol and FastMCP code.",
        "mode": "subagent",
        "model": "opencode/big-pickle",
        "prompt": "{file:./prompts/fastmcp-developer.md}",
        "tools": {
            "todowrite": false
        }
    }
  }
}